{
  "name": "Motivatr",
  "description": "Get that exercise in!",
  "version": "1.0",
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "content_scripts": [
      {
        "matches": ["*://www.netflix.com/*","*://www.facebook.com/*","*://www.twitter.com/*","*://www.instagram.com/*","*://www.youtube.com/*"],
        "js": ["content.js"]
      }
  ],
  "browser_action": {
        "default_popup": "popup.html"
    },
  "icons": { "16": "logo16.png",
           "48": "logo48.png",
          "128": "logo128.png"
  },
  "manifest_version": 2

}
